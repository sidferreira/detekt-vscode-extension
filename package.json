{
  "name": "kotlin-tooling-extensions-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Kotlin tooling extensions: detekt, ktfmt, and ktlint",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidferreira/detekt-vscode-extension"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "watch": "npm run watch --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "package": "npm run package --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "version:list": "node scripts/version.js --list",
    "version:set": "node scripts/version.js"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.9.1",
    "@swc/core": "^1.15.1",
    "@swc/helpers": "^0.5.17",
    "@types/jest": "^29.5.14",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^2.13.0"
  }
}
