{
  "name": "detekt-vscode-extension",
  "displayName": "Detekt",
  "description": "Run detekt analysis on Kotlin files and display results in Problems panel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "kotlin",
    "detekt",
    "linter",
    "code analysis"
  ],
  "publisher": "Sid Ferreira",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidferreira/detekt-vscode-extension"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "detekt.runAnalysis",
        "title": "Detekt: Run Analysis on Project"
      }
    ],
    "configuration": {
      "title": "Detekt",
      "properties": {
        "detekt.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the detekt extension"
        },
        "detekt.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run detekt automatically when saving Kotlin files"
        },
        "detekt.executablePath": {
          "type": "string",
          "default": "detekt",
          "description": "Path to the detekt executable"
        },
        "detekt.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional arguments to pass to detekt"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-fixtures",
    "copy-fixtures": "mkdir -p dist/test/fixtures && cp src/test/fixtures/*.kt dist/test/fixtures/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:vscode": "node ./dist/test/run-test.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  }
}
