{
  "name": "very-simple-ktlint-extension",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.75.0"
  },
  "publisher": "SidFerreira",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidferreira/detekt-vscode-extension",
    "directory": "ktlint"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ktlint.runAnalysis",
        "title": "ktlint: Run Analysis on Project"
      },
      {
        "command": "ktlint.formatDocument",
        "title": "ktlint: Format Current File"
      }
    ],
    "configuration": {
      "title": "ktlint",
      "properties": {
        "ktlint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the ktlint extension"
        },
        "ktlint.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run ktlint automatically when saving Kotlin files"
        },
        "ktlint.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format Kotlin files automatically when saving (using ktlint format)"
        },
        "ktlint.executablePath": {
          "type": "string",
          "default": "ktlint",
          "description": "Path to the ktlint executable"
        },
        "ktlint.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional arguments to pass to ktlint"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npx @vscode/vsce package",
    "package:out": "npx @vscode/vsce package --out ./dist/${npm_package_name}-v${npm_package_version}.vsix",
    "publish": "npx @vscode/vsce publish"
  }
}
