{
  "name": "Very simple Detekt extension",
  "icon": "icon.png",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.75.0"
  },
  "publisher": "SidFerreira",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidferreira/detekt-vscode-extension",
    "directory": "detekt"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "detekt.runAnalysis",
        "title": "Detekt: Run Analysis on Project"
      }
    ],
    "configuration": {
      "title": "Detekt",
      "properties": {
        "detekt.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the detekt extension"
        },
        "detekt.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run detekt automatically when saving Kotlin files"
        },
        "detekt.executablePath": {
          "type": "string",
          "default": "detekt",
          "description": "Path to the detekt executable"
        },
        "detekt.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional arguments to pass to detekt"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npx @vscode/vsce package",
    "package:out": "npx @vscode/vsce package --out ./dist/${npm_package_name}-v${npm_package_version}.vsix",
    "publish": "npx @vscode/vsce publish"
  }
}
