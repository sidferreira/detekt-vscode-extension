{
  "name": "detekt-vscode-extension",
  "displayName": "Detekt",
  "description": "Run detekt analysis on Kotlin files and display results in Problems panel",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "kotlin",
    "detekt",
    "linter",
    "code analysis"
  ],
  "publisher": "SidFerreira",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidferreira/detekt-vscode-extension",
    "directory": "packages/detekt"
  },
  "license": "MIT",
  "icon": "detekt-logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "detekt.runAnalysis",
        "title": "Detekt: Run Analysis on Project"
      }
    ],
    "configuration": {
      "title": "Detekt",
      "properties": {
        "detekt.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the detekt extension"
        },
        "detekt.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run detekt automatically when saving Kotlin files"
        },
        "detekt.executablePath": {
          "type": "string",
          "default": "detekt",
          "description": "Path to the detekt executable"
        },
        "detekt.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional arguments to pass to detekt"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "yarn compile && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npx @vscode/vsce package",
    "package:out": "npx @vscode/vsce package --out ./dist/${npm_package_name}-${npm_package_version}.vsix",
    "publish": "npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.9.1",
    "@swc/core": "^1.15.1",
    "@swc/helpers": "^0.5.17",
    "@types/jest": "^29.5.14",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "typescript": "^5.9.3"
  ,
    "@vscode/vsce": "^2.13.0"
  }
}
